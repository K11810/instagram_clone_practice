<div class="container">
  <div class="user-show">
    <div class="user-image">
      <% if @user.user_image? %>
        <%= image_tag @user.user_image.url %>
      <% else %>
        <%= image_tag("/user_images/default_user.jpg") %>
      <% end %>
    </div>
    <div class="user-detail">
      <h3><%= @user.name %></h3>
      <% if current_user.id == @user.id %>
        <p><%= @user.email %></p>
        <p><%= link_to 'ユーザ情報編集', edit_user_path(@user) %></p>
      <% end %>
    </div>
  </div>

  <ul class="user-tabs">
    <li><%= link_to "Favorites", "/users/#{@user.id}/favorites" %></li>
    <li><%= link_to "New Post", new_picture_path %></li>
  </ul>

</div>