<div class="container">
  <div class="user-show">
    <div class="user-detail">
      <h3><%= @user.name %></h3>
      <div class="user-image">
        <% if @user.user_image? %>
          <%= image_tag @user.user_image.url, size: "210x210" %>
        <% else %>
          <%= image_tag("/user_images/default_user.jpg", size: "210x210") %>
        <% end %>
      </div>
      <% if current_user.id == @user.id %>
        <p><%= @user.email %></p>
        <p><%= link_to 'ユーザ情報編集', edit_user_path(@user) %></p>
      <% end %>
    </div>
  </div>
    <p><%= link_to "お気に入り", "/users/#{@user.id}/favorites" %></p>
    <p><%= link_to "新規投稿", new_picture_path %></p>
</div>
