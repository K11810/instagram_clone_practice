<%= form_with(model: @user, local: true) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, id: :user_name %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email, id: :user_email %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, name: "user[password]", placeholder: "Please enter the password" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, name: "user[password_confirmation]", placeholder: "password_confirmation" %>
  </div>

  <div class="field">
    <%= f.label :user_image %>
    <%= f.file_field :user_image, id: :user_image %>
    <%= image_tag(@user.user_image.url) if @user.user_image && @user.user_image.url%>
    <%= f.hidden_field :image_cache %>

  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>